{
  "compilerOptions": {
    /* =========================
       File Structure
    ========================== */
    "rootDir": "./src",
    "outDir": "./dist",

    /* =========================
       Language & Environment
    ========================== */
    "target": "ES2017",
    "module": "ES2020",
    "lib": ["DOM", "ES2017"],

    /* =========================
       Module Resolution
    ========================== */
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": false,

    /* =========================
       Output Control
    ========================== */
    "sourceMap": true,
    "declaration": false,
    "declarationMap": false,

    /* =========================
       Type Checking
    ========================== */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "isolatedModules": true,

    /* =========================
       Misc
    ========================== */
    "skipLibCheck": true
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
